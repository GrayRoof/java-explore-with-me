				{
					"name": "Получить рейтинг событий по категории",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const main = async () => {\r",
									"    const api = new API(pm);\r",
									"    const rnd = new RandomUtils();\r",
									"\r",
									"    try {\r",
									"        const initiator = await api.addUser(rnd.getUser());\r",
									"\r",
									"        const category = await api.addCategory(rnd.getCategory());\r",
									"\r",
									"        let firstEventBody = rnd.getEvent(category.id);\r",
									"        let secondEventBody = rnd.getEvent(category.id);\r",
									"        firstEventBody['requestModeration'] = false\r",
									"\r",
									"        let firstEvent = await api.addEvent(initiator.id, firstEventBody);\r",
									"        let secondEvent = await api.addEvent(initiator.id, secondEventBody);\r",
									"\r",
									"        firstEvent = await api.publishEvent(firstEvent.id);\r",
									"        secondEvent = await api.publishEvent(secondEvent.id);\r",
									"\r",
									"        const firstUser = await api.addUser(rnd.getUser());\r",
									"        const secondUser = await api.addUser(rnd.getUser());\r",
									"\r",
									"        const firstRequest = await api.publishParticipationRequest(firstEvent.id, firstUser.id);\r",
									"        const thirdRequest = await api.publishParticipationRequest(secondEvent.id, firstUser.id);\r",
									"        const secondRequest = await api.publishParticipationRequest(firstEvent.id, secondUser.id);\r",
									"\r",
									"        await api.addReaction(firstUser.id, firstEvent.id, true);\r",
									"        await api.addReaction(firstUser.id, secondEvent.id, true);\r",
									"        await api.addReaction(secondUser.id, firstEvent.id, true);\r",
									"\r",
									"        pm.collectionVariables.set('response', firstEvent);\r",
									"        pm.collectionVariables.set(\"cid\", category.id);\r",
									"        \r",
									"    } catch(err) {\r",
									"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
									"    }\r",
									"};\r",
									"\r",
									"const interval = setInterval(() => {}, 1000);\r",
									"\r",
									"setTimeout(async () => \r",
									"    {\r",
									"        try {\r",
									"            // выполняем наш скрипт\r",
									"            await main();\r",
									"        } catch (e) {\r",
									"            console.error(e);\r",
									"        } finally {\r",
									"            clearInterval(interval);\r",
									"        }\r",
									"    },  \r",
									"    100 \r",
									");"
								],
								"type": "text/javascript"
							}
